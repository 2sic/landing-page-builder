@RenderPage("_sharedAssets.cshtml", new { parts = "styles,scripts"})

<div class="co-container-outer position-relative co-customer-logos @ListContent.Presentation.TextOptimization @ListContent.Presentation.BackgroundColor @((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "co-backgroundimage" : "") sc-element" style="@((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "background-image:url('"+ListContent.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    @Edit.Toolbar(ListContent)
    <div class="co-backgroundimage-overlay @ListContent.Presentation.BGImageEffects"></div>
    <div class="co-container-inner">
        @RenderPage("_sharedBlock.cshtml")
            <div class="row justify-content-center">   
                @foreach (var customer in AsDynamic(Data["Default"]))
                {    
                    <div class="col-6 col-sm-4 col-lg-3 col-xl-2 mb-4">
                            <div class="h-100 text-center align-items-center sc-element">
                            @Edit.Toolbar(customer)
                                <figure>
                                @if (!String.IsNullOrEmpty(customer.Image))
                                    {
                                    <img class="img-fluid" src="@customer.Image?w=400&amp;scale=both&amp;mode=max&amp;quality=70" alt="@customer.Name">
                                    }
                                </figure>
                                @*<div class="card-body sc-element">
                                
                                    <h6 class="card-title">@customer.Name</h6>
                                    <div class="card-text">
                                        @Html.Raw(customer.Body)
                                    </div>
                                </div>*@
                            </div>
                    </div>     
                }
        </div>
        @RenderPage("_sharedButton.cshtml")
    </div>
</div>