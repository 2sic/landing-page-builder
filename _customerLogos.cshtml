@RenderPage("_sharedAssets.cshtml", new { parts = "styles,scripts"})

<div class="co-container-outer position-relative co-customer-logos @ListContent.Presentation.TextOptimization @ListContent.Presentation.BackgroundColor @((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "co-backgroundimage" : "")" style="@((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "background-image:url('"+ListContent.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    <div class="co-backgroundimage-overlay @ListContent.Presentation.BGImageEffects"></div>
    <div class="co-container-inner">
        @RenderPage("_sharedBlock.cshtml")
        
        <div class="row">   
            @foreach (var customer in AsDynamic(Data["Default"]))
            {                
                <div class="col-12 col-md-3 mb-4">
                    @if (!String.IsNullOrEmpty(customer.Image))
                    {
                        <div class="co-logo-image-wrapper">
                            <img class="img-fluid" src="@customer.Image" alt="@customer.Name">
                        </div>
                    }
                    else
                    {
                        <div class="co-logo-placeholder"></div>
                    }
                </div>
                <div class="col-12 col-md-3 mb-4 sc-element">
                    @Edit.Toolbar(customer)
                    <strong>@customer.Name</strong>
                    <div class="co-text mb-4">
                        @Html.Raw(customer.Body)
                    </div>
                </div>                
            }
        </div>

        @RenderPage("_sharedButton.cshtml")
    </div>
</div>