@RenderPage("_sharedAssets.cshtml")

<div class="co-container-outer co-image-zig-zag @ListContent.Presentation.BackgroundColor @((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "co-backgroundimage" : "")" style="@((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "background-image:url('"+ListContent.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    <div class="co-container-inner">
        @RenderPage("_sharedBlock.cshtml")
        
        @{int i = 0;}
        @foreach (var data in AsDynamic(Data["Default"]))
        {
        <div class="row">         
            <div class="col-12 col-md-6 mb-4 sc-element @((i % 2) == 0 ? "order-md-2" : "")">
                @Edit.Toolbar(data)
                <h5>@data.MicroTitle</h5>
                <h1>@data.Title</h1>
                <div class="co-text mb-4">
                    @Html.Raw(data.Body)
                </div>
                <a href="#" class="btn btn-primary">CTA Button</a>
            </div>
            <div class="col-12 col-md-6">
                <img class="img-fluid" src="@data.Image" alt="@data.Title">
            </div>
        </div>
        i++;
        }
    </div>
</div>