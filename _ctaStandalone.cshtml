@RenderPage("./shared/_Assets.cshtml", new { parts = "styles,scripts"})

<section class="co-container-outer position-relative co-cta-standalone @ListContent.Presentation.TextOptimization @ListContent.Presentation.BackgroundColor @((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "co-backgroundimage" : "") sc-element" style="@((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "background-image:url('"+ListContent.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    @Edit.Toolbar(ListContent)
    <div class="co-backgroundimage-overlay @ListContent.Presentation.BGImageEffects"></div>
    <div class="co-container-inner d-flex align-items-center sc-element">
        <div class="co-cta-standalone-wrapper" style="width: 100%">
            <div class="row justify-content-center">            
                <div class="col-12 col-md-7 text-center mb-4 sc-element">
                    @Edit.Toolbar(Content)                    
                    @if (!String.IsNullOrEmpty(@Content.Title))
                    {
                        <h2>@Content.Title</h2>
                    }
                    @if (!String.IsNullOrEmpty(@Content.Body))
                    {
                        <div class="co-text mb-3">
                            @Html.Raw(Content.Body)
                        </div>
                    }
                    @if(Content.CTA.Count > 0)
                    {
                        foreach (var cta in AsDynamic(Content.CTA)) {
                            <a href="@cta.Link" class="btn btn-primary">@cta.Label</a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>