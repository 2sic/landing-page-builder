@inherits ToSic.Sxc.Dnn.RazorComponent
@RenderPage("./shared/_Assets.cshtml")

<section class="co-container-outer position-relative co-intro @Header.Presentation.TextOptimization @Header.Presentation.BackgroundColor @((!String.IsNullOrEmpty(Header.Presentation.BGImage)) ? "co-backgroundimage" : "") sc-element" style="@((!String.IsNullOrEmpty(Header.Presentation.BGImage)) ? "background-image:url('"+Header.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    @Edit.Toolbar(Header)
    <div class="co-backgroundimage-overlay @Header.Presentation.BGImageEffects"></div>
    <div class="co-container-inner d-flex align-items-center sc-element">
        <div class="co-intro-wrapper">
            @RenderPage("./shared/_Block.cshtml")
            <div class="row justify-content-center">            
                <div class="col-12 col-md-7 text-center mb-4 sc-element">
                    @Edit.Toolbar(Content)
                    @if (!String.IsNullOrEmpty(Content.Icon))
                    {
                        <i class="co-icon fas @Content.Icon" aria-hidden="true"></i>
                    }
                    @if (!String.IsNullOrEmpty(Content.MicroTitle))
                    {
                        <h5>@Content.MicroTitle</h5>
                    }
                    <h1 class="display-4">@Content.Title</h1>
                    <div class="co-text mb-5">
                        @Html.Raw(Content.Body)
                    </div>
                    @if(Content.CTA.Count > 0)
                    {
                        foreach (var cta in AsList(Content.CTA)) {
                            @RenderPage("./shared/_Cta.cshtml", new { cta = cta})
                        }
                    }
                </div>
            </div>
            @RenderPage("./shared/_ButtonList.cshtml")
        </div>
    </div>
</section>