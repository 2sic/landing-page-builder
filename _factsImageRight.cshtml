@RenderPage("./shared/_Assets.cshtml")

<section class="co-container-outer position-relative co-fact @ListContent.Presentation.TextOptimization @ListContent.Presentation.BackgroundColor @((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "co-backgroundimage" : "") sc-element" style="@((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "background-image:url('"+ListContent.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    @Edit.Toolbar(ListContent)
    <div class="co-backgroundimage-overlay @ListContent.Presentation.BGImageEffects"></div>
    <div class="co-container-inner">
        @RenderPage("./shared/_Block.cshtml")
        
        @{int i = 0;}
        @foreach (var fact in AsDynamic(Data["Default"]))
        {
            <div class="row align-items-center mb-5 sc-element">         
                <div class="col-12 col-md-6 mb-4 @((i % 2) != 0 ? "order-md-2" : "")">
                    @Edit.Toolbar(fact)
                    @if (!String.IsNullOrEmpty(@fact.MicroTitle))
                    {
                        <h5>@fact.MicroTitle</h5>
                    }
                    <h1>@fact.Title</h1>
                    <div class="co-text mb-4">
                        @Html.Raw(fact.Body)
                    </div>
                    <div class="co-list mb-5">
                        @Html.Raw(fact.List)
                    </div>
                </div>
                <div class="col-12 col-md-6 mb-4">
                    @if (!String.IsNullOrEmpty(@fact.Image))
                    {
                        <img class="img-fluid" src="@fact.Image?w=1050&amp;scale=both&amp;mode=max&amp;quality=70" alt="@fact.Title">
                    }

                    @if (String.IsNullOrEmpty(@fact.Image) && !String.IsNullOrEmpty(@fact.Icon))
                    {
                        <div class="text-center">
                            <i class="co-icon fas @fact.Icon" aria-hidden="true"></i>
                        </div>
                    }
                </div>
            </div>
            i++;
        }

        @RenderPage("./shared/_ButtonList.cshtml")
    </div>
</section>