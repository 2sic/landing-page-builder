@RenderPage("_sharedAssets.cshtml")

<div class="co-container-outer co-fact @ListContent.Presentation.BackgroundColor @((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "co-backgroundimage" : "")" style="@((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "background-image:url('"+ListContent.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    <div class="co-container-inner">
        <div class="row justify-content-center">
            <div class="col-12 mb-4 text-center sc-element">
                @Edit.Toolbar(ListContent)
                <h4>@ListContent.MicroTitle</h4>
                <h2>@ListContent.Title</h2>
                <div class="co-text mb-4">
                    @Html.Raw(ListContent.Body)
                </div>
            </div>
        </div>
        
        @{int i = 0;}
        @foreach (var fact in AsDynamic(Data["Default"]))
        {
        <div class="row">         
            <div class="col-12 col-md-6 mb-4 sc-element @((i % 2) != 0 ? "order-md-2" : "")">
                @Edit.Toolbar(fact)
                <h5>@fact.MicroTitle</h5>
                <h1>@fact.Title</h1>
                <div class="co-text mb-4">
                    @Html.Raw(fact.Body)
                </div>
                <a href="#" class="btn btn-primary">CTA Button</a>
            </div>
            <div class="col-12 col-md-6">
                <img class="img-fluid" src="@fact.Image" alt="@fact.Title">
            </div>
        </div>
        i++;
        }
    </div>
</div>