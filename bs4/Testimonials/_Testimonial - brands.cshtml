@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;
@{
  var parts = CreateInstance("../shared/Parts.cs"); 
}

<section class='app-landingpage-builder app-lp-testimonials-brands @parts.SectionClasses()' @parts.SectionStyle()
  @Edit.TagToolbar(Header, toolbar: "settings&hover=left&autoAddMore=start")>
  @parts.BackgroundDiv()
  <div class="container-fluid">
    @Html.Partial("../shared/_Block.cshtml")
    <div class="row justify-content-center">
      @foreach (var customer in AsList(Data)) {
        <div class="col-6 col-sm-4 col-lg-3 col-xl-2 mb-4">
          <div class="h-100 text-center align-items-center" @Edit.TagToolbar(customer, toolbar: "%delete&show=true")>
            <img class="img-fluid"
              src='@Link.Image(customer.Image, width: 400, resizeMode: "max", quality: 70)'
              alt="@customer.Name">
          </div>
        </div>
      }
    </div>
    @parts.HeaderCta(Header.CTA)
  </div>
</section>

@Html.Partial("../shared/_Assets.cshtml")
