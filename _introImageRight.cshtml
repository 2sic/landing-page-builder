@RenderPage("_sharedAssets.cshtml")

<div class="co-container-outer co-intro @ListContent.Presentation.BackgroundColor @((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "co-backgroundimage" : "")" style="@((!String.IsNullOrEmpty(ListContent.Presentation.BGImage)) ? "background-image:url('"+ListContent.Presentation.BGImage+"?w=2560&scale=both&quality=70')" : "")">
    <div class="co-container-inner sc-element">
        <div class="row justify-content-center">
            <div class="col-12 mb-4 text-center sc-element">
                @Edit.Toolbar(ListContent)
                <h4>@ListContent.MicroTitle</h4>
                <h2>@ListContent.Title</h2>
                <div class="co-text mb-4">
                    @Html.Raw(ListContent.Body)
                </div>
            </div>
        </div>

        <div class="row">
            @Edit.Toolbar(Content)
            <div class="col-12 col-md-6 mb-4">
                <h5>@Content.MicroTitle</h5>
                <h1>@Content.Title</h1>
                <div class="co-text mb-4">
                    @Html.Raw(Content.Body)
                </div>
                <a href="#" class="btn btn-primary">CTA Button</a>
            </div>
            <div class="col-12 col-md-6">
                <img class="img-fluid" src="@Content.Image" alt="@Content.Title">
            </div>
        </div>
    </div>
</div>
        