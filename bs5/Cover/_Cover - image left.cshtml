@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;
@{
  var parts = CreateInstance("../shared/Parts.cs");
}

<section class='app-landingpage-builder app-lp-cover @parts.SectionClasses()' @parts.SectionStyle()
  @Edit.TagToolbar(Header, toolbar: "settings&hover=left&autoAddMore=start&class=coverTagbar")>
  @parts.BackgroundDiv()
  <div class="container-fluid d-flex align-items-center">
    @Html.Partial("../shared/_Block.cshtml")
    <div class="row align-items-center w-100 mt-5" @Edit.TagToolbar(Content) @Edit.Attribute("quick-edit-config", new {
      modules = new { enable = true }})>
      <div class="col-12 col-md-6 mb-5 order-md-2">
        @Html.Partial("_Cover.PartBody.cshtml")
        @if (Content.CTA.Count != 0) {
          @parts.CtaList(Content.CTA)
        }
      </div>
      @Html.Partial("../shared/_Media Content.cshtml", new { Data = Content })
    </div>
    @parts.HeaderCta(Header.CTA)
  </div>
</section>

@Html.Partial("../shared/_Assets.cshtml")
