@inherits ToSic.Sxc.Dnn.RazorComponent
@using ToSic.Razor.Blade;
@RenderPage("../shared/_Assets.cshtml")
@{ var parts = CreateInstance("../shared/_Parts.cshtml"); }

<section class='co-container-outer @parts.SectionClasses("co-customer-faces")'
    @parts.SectionStyle()
    @Edit.TagToolbar(Header, settings: new { hover = "left" })
    >
    @parts.BackgroundDiv()
    <div class="co-container-inner" @Edit.Attribute("quick-edit-config", new { modules = new { enable = true }})>
        @RenderPage("../shared/_Block.cshtml")
        <div class="row mb-5 co-card justify-content-center">   
            @foreach (var customer in AsList(Data)) {    
                <div class="col-12 col-sm-6 col-lg-4 mb-5" @Edit.TagToolbar(customer)>
                        <div class="card h-100 text-center">
                            <figure>
                              @if (Text.Has(customer.Image)) {
                                <img class="card-img-top rounded-circle" src="@customer.Image?w=400&amp;h=400&amp;scale=both&amp;mode=crop&amp;quality=70" alt="@customer.Name">
                              } else {
                                <div class="co-person-placeholder"></div>
                              }
                            </figure>
                            <div class="card-body">
                                <h6 class="card-title">@customer.Name</h6>
                                <div class="card-text">
                                    @Html.Raw(customer.Body)
                                </div>
                            </div>
                        </div>
                </div>     
            }
        </div>

        @parts.HeaderCta(Header.CTA)
    </div>
</section>