@inherits ToSic.Sxc.Dnn.RazorComponent
@using ToSic.Razor.Blade;
@{ var helpers = CreateInstance("../shared/_Helpers.cshtml"); }

<section class='app-landingpage-builder co-customer-logos @helpers.SectionClasses()'
    @helpers.SectionStyle()
    @Edit.TagToolbar(Header, toolbar: "settings&hover=left&autoAddMore=start")
    >
    @helpers.BackgroundDiv()
    <div class="co-container-inner" @Edit.Attribute("quick-edit-config", new { modules = new { enable = true }})>
        @RenderPage("../shared/_Block.cshtml")
        <div class="row justify-content-center">   
            @foreach (var customer in AsList(Data)) {    
                <div class="col-6 col-sm-4 col-lg-3 col-xl-2 mb-4">
                    <div class="h-100 text-center align-items-center" @Edit.TagToolbar(customer, toolbar: new[] { "%delete&show=true" })>
                        <figure>
                        @if (Text.Has(customer.Image)) {
                            <img class="img-fluid" src='@Tags.SafeUrl(customer.Image + "?w=400&amp;scale=both&amp;mode=max&amp;quality=70")' alt="@customer.Name">
                        }
                        </figure>
                    </div>
                </div>     
            }
        </div>
        @helpers.HeaderCta(Header.CTA)
    </div>
</section>

@RenderPage("../shared/_Assets.cshtml")
