@inherits ToSic.Sxc.Dnn.RazorComponent
@using ToSic.Razor.Blade;
@{ 
  var helpers = CreateInstance("../shared/_Helpers.cshtml");
  var i = 0;
  var rowEven = "order-md-2";
  var rowOdd = "text-right";
}

<section class='app-landingpage-builder app-lp-benefits @helpers.SectionClasses()'
    @helpers.SectionStyle()
    @Edit.TagToolbar(Header, toolbar: "settings&hover=left&autoAddMore=start")
    >
    @helpers.BackgroundDiv()
    <div class="container-fluid" @Edit.Attribute("quick-edit-config", new { modules = new { enable = true }})>
        @RenderPage("../shared/_Block.cshtml")
        
        @foreach (var data in AsList(Data)) {
            <div class="row align-items-center mb-5" @Edit.TagToolbar(data)>         
                <div class="col-12 col-md-6 mb-4 @(i++ % 2 == 0 ? rowEven : rowOdd)">
                    @if (Text.Has(data.MicroTitle)) {
                        <h5>@data.MicroTitle</h5>
                    }
                    <h3>@data.Title</h3>
                    <div class="co-text mb-4">
                        @Html.Raw(data.Body)
                    </div>
                </div>
                @helpers.VideoImageIconOrInnerContent(data)
            </div>
        }

        @helpers.HeaderCta(Header.CTA)
    </div>
</section>

@RenderPage("../shared/_Assets.cshtml")
