@if (!String.IsNullOrEmpty(ListContent.Title))
{
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 mb-5 text-center sc-element">
            @if (!String.IsNullOrEmpty(ListContent.MicroTitle))
            {
                <h5>@ListContent.MicroTitle</h5>
            }
            <h2 class="display-4">@ListContent.Title</h2>
            @if (!String.IsNullOrEmpty(ListContent.Body))
            {
            <div class="co-text mb-5">
                @Html.Raw(ListContent.Text)
            </div>
             }
        </div>
    </div>
}